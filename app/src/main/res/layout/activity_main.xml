<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pic"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingBottom="80px"
            android:text="Welcome to Bunnyworld"
            android:textColor="@color/colorPrimary"
            android:textSize="80px"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/cabin_sketch_bold"
                android:gravity="center"
                android:text="Select: "
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_main_play"
                android:layout_width="240sp"
                android:layout_height="35sp"
                android:background="#E5FFCC"
                android:fontFamily="@font/lemon"
                android:gravity="center" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/cabin_sketch_bold"
                android:onClick="importGame"
                android:text="Import"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_edit"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="#FFFFCC"
                android:fontFamily="@font/cabin_sketch_bold"
                android:onClick="enterEdit"
                android:text="Edit Game"
                android:textSize="20sp" />

            <Button
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="#FFFFCC"
                android:fontFamily="@font/cabin_sketch_bold"
                android:onClick="loadGame"
                android:text="Load Game"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:background="#FFFFCC"
                android:fontFamily="@font/cabin_sketch_bold"
                android:onClick="clearGame"
                android:text="Clear Game"
                android:textSize="20sp" />

            <Button
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:background="#FFFFCC"
                android:fontFamily="@font/cabin_sketch_bold"
                android:onClick="clearAllGames"
                android:text="Clear All Games"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>